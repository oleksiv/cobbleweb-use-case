{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div class="text-right">
                <a href="{{ path('people_dump') }}" class="btn btn-sm btn-outline-warning mb-4 mr-2">Dump</a>
                <a href="{{ path('people_create') }}" class="btn btn-sm btn-outline-success mb-4">Create new</a>
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Toys</th>
                    </tr>
                </thead>
                <tbody>
                {% for person in people %}
                    <tr>
                        <td>
                            <a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.name }}</a>
                        </td>
                        <td>{{ person.email }}</td>
                        <td>{{ person.age }}</td>
                        <td>{{ person.toys | join(' / ') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}